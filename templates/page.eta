<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Psychotherapeutische Praxis für Kinder und Jugendliche in Meerbusch" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/styles.css" />
    <title><%= it.siteTitle %></title>
  </head>
  <body>
    <header>
      <div class="logoAndButton">
        <a href="/">
          <div class="logo">
            <img src="/images/logo.jpg" alt="Logo" width="200" height="80" />
          </div>
        </a>
        <button aria-haspopup="menu" aria-label="Menü öffnen" type="button">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
          Menü
        </button>
        <nav id="desktop" aria-label="Menü">
          <menu>
            <% for (const item of it.navigation) { %>
            <li><a href="<%= item.href %>"><%= item.text %></a></li>
            <% } %>
          </menu>
        </nav>
      </div>
    </header>
    <%~ it.body %>
    <footer class="box">
      <div class="stack-s center text-align:center">
        <address>
          Psychotherapeutische Praxis für Kinder und Jugendliche<br />
          <a href="mailto:praxis@kjp-meerbusch.de">praxis@kjp-meerbusch.de</a>
           // <a href="tel:021325819010">Tel. 02132/5810910</a>
        </address>
        <a href="/impressum.html">Impressum & Datenschutz</a>
      </div>
    </footer>
    <script>
      const openMenuButton = document.querySelector("[aria-haspopup=menu]");
      const nav = document.querySelector("header nav");
      if (openMenuButton && nav) {
        openMenuButton.addEventListener("click", () => {
          const isOpen = nav.getAttribute("aria-expanded") === "true";
          if (isOpen) {
            nav.removeAttribute("aria-expanded");
            return;
          }
          nav.setAttribute("aria-expanded", "true");
        });
      }
    </script>
  </body>
</html>
