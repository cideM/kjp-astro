---
import { Image, type LocalImageProps } from "astro:assets";

interface Props {
  imageProps: {
    src: LocalImageProps["src"];
    alt: LocalImageProps["alt"];
  };
  height: number;
  src: string;
  allowFullScreen: boolean;
}

const { imageProps, height, src, allowFullScreen } = Astro.props;
---

<style>
  button {
    outline: 0;
    border: 0;
    width: 100%;
  }

  button.consent {
    position: relative;
    & > .overlay {
      display: flex;
      font-weight: bold;
      flex-direction: column;
      gap: 2em;
      align-items: center;
      padding: 4em 1em;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      color: white;
      background-color: rgba(50, 50, 50, 0.7);

      & p {
        font-size: inherit;
      }

      & > * {
        display: flex;
        align-items: center;
      }
    }
  }

  .container.consent {
    & > .overlay {
      display: none;
    }
  }

  .container:not(.consent) {
    & > iframe {
      display: none;
    }
  }

  .container {
    width: 100%;

    & iframe {
      width: 100%;
    }

    & :global(img) {
      width: 100%;
    }
  }
</style>

<script>
  const btn = document.querySelector("button.consent")!;
  btn.addEventListener("click", () => {
    document.querySelector(".container")!.classList.add("consent");
    btn.remove();
  });
</script>

<div class="container">
  <iframe
    src={src}
    height={height}
    allowfullscreen={allowFullScreen}
    style={{ border: 0 }}></iframe>
  <button class="consent">
    <Image {...imageProps} height={height} />
    <div class="overlay">
      <h2>
