---
import { Picture } from "astro:assets";
const { size, alt, src, ...props } = Astro.props;
---

<style define:vars={{ size: size }}>
  div :global(picture) {
    border-radius: 10000px;
    overflow: hidden;
    min-width: calc(var(--size) * 1px);
    width: calc(var(--size) * 1px);
    height: calc(var(--size) * 1px);
    min-height: calc(var(--size) * 1px);
  }

  div :global(img) {
    object-fit: cover;
    object-position: center;
  }
</style>

<div>
  <Picture src={src} alt={alt} width={size} height={size} {...props} />
</div>
